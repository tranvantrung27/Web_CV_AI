        background: linear-gradient(90deg, #1976d2 0%, #00bcd4 100%);
        color: #fff !important;
        border: none;
        border-radius: 2rem;
        box-shadow: 0 2px 8px #1976d240;
        transition: background 0.2s, box-shadow 0.2s;
    }

