@model IEnumerable<CV_AI.Models.JobPost>

<div class="job-grid-container row g-0">
    @foreach (var job in Model)
    {
        string faviconUrl = Url.Content("~/images/logo/cv_logo.png");
        if (job.Employer != null && !string.IsNullOrWhiteSpace(job.Employer.CompanyWebsite)
            && (job.Employer.CompanyWebsite.StartsWith("http://") || job.Employer.CompanyWebsite.StartsWith("https://")))
        {
            var host = new Uri(job.Employer.CompanyWebsite).Host;
            faviconUrl = $"https://www.google.com/s2/favicons?domain={host}";
        }
        <div class="col-12 col-sm-6 col-md-4 mb-4">
            <a asp-controller="Job" asp-action="Details" asp-route-id="@job.ID_JobPost" class="job-feature-card d-flex align-items-center shadow-sm text-decoration-none text-dark">
                <div class="job-feature-logo d-flex align-items-center justify-content-center flex-shrink-0">
                    <img src="@faviconUrl" alt="Logo" />
                </div>
                <div class="flex-grow-1 overflow-hidden px-2">
                    <div class="fw-bold job-title mb-1 job-title-2line" style="text-transform:none !important;">@job.Title</div>
                    <div class="company-name text-secondary text-truncate mb-1">
                        @(string.IsNullOrWhiteSpace(job.Employer?.CompanyName) ? "Không rõ công ty" : job.Employer.CompanyName)
                    </div>
                    <div class="d-flex flex-wrap gap-2 align-items-center mb-1">
                        @if (!string.IsNullOrEmpty(job.Salary))
                        {
                            <span class="badge badge-soft me-1">@job.Salary</span>
                        }
                        @if (!string.IsNullOrEmpty(job.Location))
                        {
                            <span class="badge badge-soft">@job.Location</span>
                        }
                    </div>
                </div>
                <div class="job-feature-fav ms-auto d-flex align-items-end">
                    <button class="btn btn-outline-fav" title="Yêu thích" type="button" tabindex="-1" onclick="event.preventDefault(); event.stopPropagation(); /* TODO: handle favorite */">
                        <i class="fas fa-heart"></i>
                    </button>
                </div>
            </a>
        </div>
    }
</div>

<style>
.job-grid-container {
    margin-top: 10px;
}
.job-feature-card {
    border-radius: 16px;
    background: #fff;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    border: 1px solid #f0f0f0;
    min-height: 80px;
    padding: 12px 18px 12px 12px;
    margin: 0 8px;
    transition: box-shadow 0.2s, border-color 0.2s;
    position: relative;
    display: flex;
    align-items: center;
}
.job-feature-card:hover, .job-feature-card:focus {
    box-shadow: 0 4px 24px rgba(0,0,0,0.13);
    border-color: #00b894;
    text-decoration: none;
    outline: 2px solid #00b89422;
}
.job-feature-logo {
    width: 54px;
    height: 54px;
    background: #f5f6fa;
    border-radius: 10px;
    border: 1px solid #eee;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10px;
}
.job-feature-logo img {
    width: 38px;
    height: 38px;
    object-fit: contain;
    border-radius: 6px;
    background: #fff;
}
.company-name {
    color: #ff9800;
    font-size: 0.98em;
    font-weight: 500;
    letter-spacing: 0.01em;
}
.job-title {
    font-size: 1.05em;
    font-weight: 600;
    color: #222;
    text-transform: none !important;
}
.badge-soft {
    background: #f5f6fa;
    color: #222;
    border-radius: 16px;
    font-size: 0.95em;
    font-weight: 500;
    padding: 4px 14px;
    border: 1px solid #e0e0e0;
}
.job-feature-fav {
    align-self: flex-end;
    margin-left: 8px;
}
.btn-outline-fav {
    border-radius: 50%;
    padding: 6px 8px;
    z-index: 2;
    background: #fff;
    border: 2px solid #00b894;
    color: #00b894;
    transition: background 0.2s, color 0.2s;
}
.btn-outline-fav:hover, .btn-outline-fav:focus {
    background: #00b894;
    color: #fff;
}
.btn-outline-fav:focus {
    outline: none;
    box-shadow: 0 0 0 2px #00b89433;
}
@@media (max-width: 767.98px) {
    .job-feature-card {
        padding: 10px 8px 10px 8px;
        margin: 0 0 12px 0;
    }
    .job-feature-logo {
        width: 44px;
        height: 44px;
    }
    .job-feature-logo img {
        width: 32px;
        height: 32px;
    }
}
.job-title-2line {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: normal;
    min-height: 2.6em;
}
</style> 